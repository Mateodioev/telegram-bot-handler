{
    "name": "mateodioev/tg-handler",
    "description": "Library for created telegram bots more easy",
    "type": "library",
    "require": {
        "php": ">=8.1",
        "psr/log": "^3.0",
        "smoren/string-formatter": "^1.0",
        "mateodioev/string-vars": "^1.2",
        "mateodioev/tgbot": "^4.1"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Mateodioev\\TgHandler\\": "src/"
        }
    },
    "minimum-stability": "beta",
    "require-dev": {
        "phpunit/phpunit": "^10"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --testdox tests/ --colors=always"
    }
}
